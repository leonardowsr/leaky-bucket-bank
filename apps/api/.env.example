# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/bank?schema=public

# JWT
JWT_SECRET=your-secret-key-here
ACCESS_TOKEN_EXPIRE=36000
REFRESH_TOKEN_EXPIRE=172800

# Server
PORT=3000

# CORS
# Especifique as origens permitidas separadas por vírgula
# Importante: Quando usando credentials=true, NÃO use "*"
# Desenvolvimento: http://localhost:3001,http://localhost:3000
# Produção: https://seu-dominio.com
# Deixe vazio para aceitar qualquer origem (APENAS DESENVOLVIMENTO)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_TRANSACTIONS=transactions_queue

