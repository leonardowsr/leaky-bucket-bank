generator client {
  provider        = "prisma-client"
  output          = "./generated"
  previewFeatures = ["driverAdapters"]
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  tokenCount  Int      @default(10)
  usedTokenAt DateTime @default(now())

  account Account?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Account {
  id            String @id @default(uuid())
  accountNumber String @unique
  balance       Int

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Transaction {
  id     String @id @default(uuid())
  amount Int

  sender   Account @relation("SentTransactions", fields: [senderId], references: [id])
  senderId String

  receiver   Account @relation("ReceivedTransactions", fields: [receiverId], references: [id])
  receiverId String

  status transactionStatus @default(pending)

  createdAt DateTime @default(now())
}

enum transactionStatus {
  approved
  recused
  pending
}
