{
	"name": "bank",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.11",
			"typescript": "^5.8.2",
			"tsdown": "^0.15.5",
			"@prisma/client": "^6.17.1",
			"prisma": "^6.17.1",
			"@prisma/adapter-pg": "^6.17.1"
		}
	},
	"scripts": {
		"check": "biome check --write --unsafe",
		"format": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F api dev",
		"db:push": "turbo -F api db:push",
		"db:studio": "turbo -F api db:studio",
		"db:generate": "turbo -F api db:generate",
		"db:migrate": "turbo -F api db:migrate",
		"db:start": "turbo -F api db:start",
		"db:watch": "turbo -F api db:watch",
		"db:stop": "turbo -F api db:stop",
		"db:down": "turbo -F api db:down"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/bun": "^1.2.6",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"orval": "^7.13.2",
		"tsdown": "^0.15.5",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --unsafe ."
		]
	},
	"packageManager": "bun@1.3.0"
}
